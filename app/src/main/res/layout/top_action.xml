<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    style="@style/TopActionContainer">

    <ImageView android:id="@+id/icon"
        style="@style/TopActionPicture"
        android:src="@mipmap/ic_format_align_left_white_18dp"/>

    <TextView android:id="@+id/label"
        style="@style/TopActionLabel"
        android:layout_below="@+id/icon"
        android:text="Paroles"/>

    <LinearLayout android:id="@+id/under"
        style="@style/TopActionUnderline"/>

</RelativeLayout>
